{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div class="row">
        <label for="username" class="sm-3">{{ 'resetting.request.username'|trans }}</label>
        <input type="text" id="username" name="username" required="required"  class="form-control sm-9" />
    </div>
    <div>
        <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn btn-success" />
    </div>
</form>
